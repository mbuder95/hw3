<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<ul>
  <% for entry in @entries %>
    <li>
      <a>
        <%= entry["title"] %>,
        <%= entry["date"] %>, 
        <%= entry["description"] %>
      </a>
    </li>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to All Places</a></p>

